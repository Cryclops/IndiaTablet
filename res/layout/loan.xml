<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
	>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    android:orientation="horizontal"
	    >
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:orientation="vertical"
	        >
	        <ImageView android:id="@+id/loan_image"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="1"
		        android:scaleType="fitXY"
		        android:src="@drawable/missing_photo" />
		    <ImageButton android:id="@+id/loan_reason"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="1"
		        android:scaleType="fitXY"
		        android:src="@drawable/dumb" />
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        >
		    <!-- 3 rows of 4 for the loan amount -->
		    <TableLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_horizontal"
		        android:shrinkColumns="*"
		        android:stretchColumns="*"
		        >
		        <TableRow>
		            <Button android:id="@+id/loan_amount_1"
		                style="@style/loan_amount"
		                android:text="@string/loan_amount_1" />
		            <Button android:id="@+id/loan_amount_2"
		                style="@style/loan_amount"
		                android:text="@string/loan_amount_2" />
		            <Button android:id="@+id/loan_amount_3"
		                style="@style/loan_amount"
		                android:text="@string/loan_amount_3" />
		            <Button android:id="@+id/loan_amount_4"
		                style="@style/loan_amount"
		                android:text="@string/loan_amount_4" />
		        </TableRow>
		        <TableRow>
		            <Button android:id="@+id/loan_amount_5"
		                style="@style/loan_amount"
		                android:text="@string/loan_amount_5" />
		            <Button android:id="@+id/loan_amount_6"
		                style="@style/loan_amount"
		                android:text="@string/loan_amount_6" />
		            <Button android:id="@+id/loan_amount_7"
		                style="@style/loan_amount"
		                android:text="@string/loan_amount_7" />
		            <Button android:id="@+id/loan_amount_8"
		                style="@style/loan_amount"
		                android:text="@string/loan_amount_8" />
		        </TableRow>
		        <TableRow>
		            <Button android:id="@+id/loan_amount_9"
		                style="@style/loan_amount"
		                android:text="@string/loan_amount_9" />
		            <Button android:id="@+id/loan_amount_10"
		                style="@style/loan_amount"
		                android:text="@string/loan_amount_10" />
		            <Button android:id="@+id/loan_amount_11"
		                style="@style/loan_amount"
		                android:text="@string/loan_amount_11" />
		            <Button android:id="@+id/loan_amount_12"
		                style="@style/loan_amount"
		                android:text="@string/loan_amount_12" />
		        </TableRow>
		    </TableLayout>
		    <!-- End -->
	        <SeekBar android:id="@+id/loan_seek_duration"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:max="12"
		        android:progress="0" />
	    </LinearLayout>
	</LinearLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:orientation="horizontal"
	    android:padding="5dp"
	    android:background="#888"
	    >
	    <Button android:id="@+id/loan_ok"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="OK" />
	    <Button android:id="@+id/loan_cancel"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="Cancel" />
	</LinearLayout>
</LinearLayout>